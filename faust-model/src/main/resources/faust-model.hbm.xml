<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.faustedition.model.manuscript.Repository">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="name" not-null="true" length="50" unique="true" />
	</class>

	<class name="de.faustedition.model.manuscript.Portfolio">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="repository" not-null="true" index="portfolio_index" />
		<property name="name" length="50" not-null="true" index="portfolio_index" />
	</class>

	<class name="de.faustedition.model.manuscript.Manuscript">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="portfolio" not-null="true" index="manuscript_index" />
		<property name="name" not-null="true" length="50" index="manuscript_index" />
	</class>

	<class name="de.faustedition.model.manuscript.Facsimile">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="manuscript" not-null="true" index="facsimile_index" />
		<property name="name" not-null="true" length="50" index="facsimile_index" />
		<property name="imagePath" not-null="true" length="200" />
	</class>

	<class name="de.faustedition.model.manuscript.Transcription">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="facsimile" not-null="true" index="transcription_index" />
		<property name="transcriptionType" not-null="true" index="transcription_index">
			<type name="de.faustedition.util.EnumUserType">
				<param name="enumClassName">de.faustedition.model.manuscript.TranscriptionType</param>
			</type>
		</property>
		<property name="data" />
	</class>

	<class name="de.faustedition.model.metadata.MetadataAssignment">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="associatedType" not-null="true" length="100" index="metadata_assignment_index" />
		<property name="associatedId" not-null="true" index="metadata_assignment_index" />
		<property name="field" not-null="true" index="metadata_assignment_index" />
		<property name="value">
			<column name="value" sql-type="text" not-null="true" />
		</property>
	</class>
</hibernate-mapping>