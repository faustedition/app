<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>faustedition</baseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>de.faustedition:faust-model</include>
				<include>de.faustedition:faust-server</include>
			</includes>
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>de.faustedition:faust-webapp</include>
			</includes>
			<binaries>
				<outputDirectory>webapps/${module.artifactId}-${module.version}</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>true</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory />
			<fileMode>755</fileMode>
		</fileSet>
	</fileSets>
</assembly>