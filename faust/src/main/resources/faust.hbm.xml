<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<typedef name="documentStructureNodeType" class="de.faustedition.util.EnumUserType">
		<param name="enumClassName">de.faustedition.model.document.DocumentStructureNodeType</param>
	</typedef>

	<class name="de.faustedition.model.manuscript.Repository">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="name" not-null="true" length="50" unique="true" />
	</class>

	<class name="de.faustedition.model.manuscript.Portfolio">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="repository" not-null="true" index="portfolio_index" />
		<property name="name" length="50" not-null="true" index="portfolio_index" />
	</class>

	<class name="de.faustedition.model.manuscript.Manuscript">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="portfolio" not-null="true" index="manuscript_index" />
		<property name="name" not-null="true" length="50" index="manuscript_index" />
	</class>

	<class name="de.faustedition.model.manuscript.Facsimile">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="manuscript" not-null="true" index="facsimile_index" />
		<property name="name" not-null="true" length="50" index="facsimile_index" />
		<property name="imagePath" not-null="true" length="200" />
	</class>

	<class name="de.faustedition.model.manuscript.Transcription">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="facsimile" not-null="true" index="transcription_index" />
		<property name="created" not-null="true" type="timestamp" />
		<property name="lastModified" not-null="true" type="timestamp" />
		<property name="textData" not-null="true" />
		<property name="revisionData" not-null="true" />
	</class>

	<class name="de.faustedition.model.metadata.MetadataAssignment">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="associatedType" not-null="true" length="100" index="metadata_assignment_index" />
		<property name="associatedId" not-null="true" index="metadata_assignment_index" />
		<property name="field" not-null="true" index="metadata_assignment_index" />
		<property name="value">
			<column name="value" sql-type="text" not-null="true" />
		</property>
	</class>
	<class name="de.faustedition.model.document.DocumentStructureNode" table="document_structure_node">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="nodeType" type="documentStructureNodeType" not-null="true" length="100" />
		<property name="nodeOrder" not-null="true" />
		<property name="name" not-null="true" length="100" />
		<many-to-one name="parent" column="parent_id" />
		<property name="parentPath" column="parent_path" length="1024" />
	</class>
	<class name="de.faustedition.model.document.FacsimileFile" table="document_facsimile_file">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="path" not-null="true" length="1024" unique="true" />
	</class>
	<class name="de.faustedition.model.document.DocumentStructureNodeFacet" table="document_structure_node_facet">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="facettedNode" not-null="true" column="facetted_node_id" />
		<joined-subclass name="de.faustedition.model.document.FacsimileFacet" table="document_facsimile_facet">
			<key column="node_facet_id" />
			<many-to-one name="facsimileFile" not-null="true" column="facsimile_file_id" />
			<property name="primary" not-null="true" column="is_primary" />
		</joined-subclass>
		<joined-subclass name="de.faustedition.model.document.TranscriptionFacet" table="document_transcription_facet">
			<key column="node_facet_id" />
			<property name="documentData" not-null="true" column="document_data" />
			<property name="created" not-null="true" />
			<property name="lastModified" not-null="true" column="last_modified" />
		</joined-subclass>
		<joined-subclass name="de.faustedition.model.document.ArchiveFacet" table="document_archive_facet">
			<key column="node_facet_id" />
			<property name="repository" not-null="true" length="200" />
			<property name="callnumber" not-null="true" length="100" />
			<property name="legacyCallnumber" length="100" column="legacy_callnumber" />
		</joined-subclass>
		<joined-subclass name="de.faustedition.model.document.DatingFacet" table="document_dating_facet">
			<key column="node_facet_id" />
			<property name="fromDate" column="from_date" />
			<property name="toDate" column="to_date" />
			<property name="remarks" length="1000" />
		</joined-subclass>
		<joined-subclass name="de.faustedition.model.document.PrintReferenceFacet" table="document_print_reference_facet">
			<key column="node_facet_id" />
			<property name="referenceWeimarerAusgabe" column="reference_wa" length="1000" />
			<property name="manuscriptReferenceWeimarerAusgabe" column="manuscript_ref_wa" length="1000" />
			<property name="paralipomenonReferenceWeimarerAusgabe" column="pp_ref_wa" length="1000" />
		</joined-subclass>
		<joined-subclass name="de.faustedition.model.document.LegacyMetadataFacet" table="document_legacy_metadata_facet">
			<key column="node_facet_id" />
			<property name="hands" length="1000" />
			<property name="recordNumber" length="100" />
			<property name="geneticLevel" length="200" column="genetic_level" />
			<property name="remarks" length="1000" />
		</joined-subclass>
	</class>
</hibernate-mapping>